            "source": "vector-tiles",
            "source-layer": "PostalDistrictwgs84bb",
            "paint": {
                "line-color":"#000",
                "line-opacity": [
                    "case",
                    ["boolean", ["feature-state", "clicked"], false],
                    1,
                    0
                    ],
                "line-width":2
            }
