{
    "version": 8,
    "sources": {
        "vector-tiles-bg": {
            "type": "vector",
            "tiles": [
                "https://interactive.guim.co.uk/maptiles/world/{z}/{x}/{y}.pbf"
            ]
        },
        "vector-tiles": {
            "type": "vector",
            "tiles": [
                "https://interactive.guim.co.uk/maptiles/postal-districts-sprawl/{z}/{x}/{y}.pbf"
            ],
            "promoteId": "PostDist"
        },
        "labels":{
            "type": "geojson"
        }
    },
    "sprite": "https://interactive.guim.co.uk/maptiles/ukraine-100-days/sprites/sprite",
    "glyphs": "https://interactive.guim.co.uk/maptiles/fonts/{fontstack}/{range}.pbf",
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint": {
                "background-color": "#E6E9EC"
            }
        },
        {
            "id": "admin_sub",
            "type": "line",
            "source": "vector-tiles-bg",
            "source-layer": "boundary",
            "filter": [
                "all",
                [
                    "<=",
                    "admin_level",
                    2
                ],
                [
                    "!=",
                    "maritime",
                    1
                ]
            ],
            "paint": {
                "line-color": "#b3b3b4"
            }
        },
        {
            "id": "water",
            "type": "fill",
            "source": "vector-tiles-bg",
            "source-layer": "water",
            "filter": [
                "all",
                [
                    "==",
                    "$type",
                    "Polygon"
                ],
                [
                    "!=",
                    "intermittent",
                    1
                ],
                [
                    "!=",
                    "brunnel",
                    "tunnel"
                ]
            ],
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "fill-color": "#fafafa"
            }
        },
        {
            "id": "postal-districts",
            "type": "fill",
            "source": "vector-tiles",
            "source-layer": "PostalDistrictwgs84bbsprawl",
            "paint": {
              "fill-color": "#E6E9EC"
            }
        },
        {
            "id": "postal-districts-stroke",
            "type": "line",
            "source": "vector-tiles",
            "source-layer": "PostalDistrictwgs84bbsprawl",
            "paint": {
                "line-color":"#000",
                "line-opacity": [
                    "case",
                    ["boolean", ["feature-state", "hover"], false],
                    1,
                    0
                    ],
                "line-width":2
            }
        },
        {
            "id": "postal-districts-stroke-clicked",
            "type": "line",
            "source": "vector-tiles",
            "source-layer": "PostalDistrictwgs84bbsprawl",
            "paint": {
                "line-color":"#000",
                "line-opacity": [
                    "case",
                    ["boolean", ["feature-state", "clicked"], false],
                    1,
                    0
                    ],
                "line-width":2
            }
        },
        {
            "id": "Admin-1 capital",
            "type": "symbol",
            "source": "labels",
            "filter": [
                "==",
                "featurecla",
                "Admin-1 capital"
            ],
            "layout": {
                "text-size": 16,
                "text-font": ["Gdn Text Sans TS3Bold"],
                "text-justify": "left",
                "text-field": "{name}",
                "text-variable-anchor": ["left","right","center"],
                "text-radial-offset": 0.5,
                "icon-image": "Admin-1 capital",
                "icon-size": 1,
                "visibility": "visible"
            },
            "paint": {
                "text-halo-color": "#FFFFFF",
                "text-halo-width": 1,
                "text-color": "#333333"
            }
        }
    ]
}